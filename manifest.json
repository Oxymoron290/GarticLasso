{
  "manifest_version": 3,
  "name": "GarticLasso",
  "version": "1.0.1",
  "description": "Adds a lasso fill tool and tapered brush to Gartic Phone",
  "icons": {
    "16": "icons/lasso-16.png",
    "48": "icons/lasso-48.png",
    "128": "icons/lasso-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://garticphone.com/*"],
      "js": ["early-inject.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["*://garticphone.com/*"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://garticphone.com/*"],
      "js": [
        "color-picker.js",
        "overlay.js",
        "lasso-tool.js",
        "tapered-brush.js",
        "toolbar.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "permissions": []
}
